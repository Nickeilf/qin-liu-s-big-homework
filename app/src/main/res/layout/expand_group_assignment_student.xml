<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/greyBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/question_title_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问题名"
            android:paddingLeft="@dimen/base_padding"
            android:textSize="54px"
            android:textStyle="bold"/>
    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"></View>
    <LinearLayout
        android:id="@+id/info_bar1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_column_height"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/url"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="http://115.29.184.56:10080/131250107/Homework09-Stream.git"
            android:textSize="36px" />

    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"></View>
    <LinearLayout
        android:id="@+id/info_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/base_column_height"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/readme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="这个是readme哦"
            android:textSize="36px" />

    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"></View>
    <LinearLayout
        android:id="@+id/info_bar3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_column_height"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/measured"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="measured:true"
            android:textSize="36px" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/compiled"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="compiled:true"
            android:textSize="36px" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/tested"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="tested:true"
            android:textSize="36px" />


    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"></View>
    <LinearLayout
        android:id="@+id/info_bar4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_column_height"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scored"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="scored:true"
            android:textSize="36px" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/score_student"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:paddingLeft="@dimen/base_padding"
            android:text="score:99"
            android:textSize="36px" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"></View>

    <LinearLayout
        android:id="@+id/info_bar5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_column_height"
        android:background="#FFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/line_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="代码行:"
            android:textSize="36px" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="注释行:"
            android:textSize="36px" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/method_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_padding"
            android:text="方法数:"
            android:textSize="36px" />
    </LinearLayout>



</LinearLayout>