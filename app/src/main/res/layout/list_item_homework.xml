<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="96dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:text="title"
            android:id="@+id/homework_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/base_padding"
            android:gravity="center_vertical|left"
            android:textSize="60px"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="description"
                android:id="@+id/homework_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/base_padding"
                android:gravity="center_vertical|left"
                android:textSize="40px"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="startAt:"
                    android:id="@+id/homework_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/base_padding"
                    android:gravity="center_vertical|left"
                    android:textSize="40px"
                    />
                <TextView
                    android:text="endAt:"
                    android:id="@+id/homework_end"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/base_padding"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:textSize="40px"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/arrow_margin"
        android:src="@drawable/icon_chevron_right" />

</LinearLayout>